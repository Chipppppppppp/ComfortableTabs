{
    "name": "Comfortable Tabs",
    "version": "1.0.13",
    "manifest_version": 2,
    "description": "Open a link in a new tab if and only if you double-click it",
    "icons": {
        "16": "icons/icon16.jpg",
        "48": "icons/icon48.jpg",
        "128": "icons/icon128.jpg"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "tabs"
    ]
}
