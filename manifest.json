{
    "name": "Comfortable Tabs",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Open a link in a new tab if and only if you double-click it",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs"
    ]
}
